{% extends 'base.html.twig' %}

{% set pageTitle ="Supprimer le livre "~ book.title %}

{% block title %}{{pageTitle}}{% endblock %}

{% block sidebar %}
<ul class="nav flex-column">
    <li class="nav-item">
        <a class="nav-link active" href="{{ url("homepage") }}">Accueil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ url("books:index") }}">Livres</a>
    </li>
    <hr>
    <li class="nav-item">
        <a class="nav-link" href="{{ url("books:read",{'id':book.id}) }}">Retour</a>
    </li>
</ul>
{% endblock %}

{% block body %}
    <h2>{{pageTitle}}</h2>

    {# Form de suppresion d'un livre... #}
    Etes-vous s√ªrs de vouloir supprimer le livre ?
    <form method="post" action="{{ url('books:delete', {'id': book.id}) }}">
        <input type="hidden" name="_method" value="DELETE">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ book.id) }}">
        <button class="btn btn-danger">Oui</button>
        <a class="btn btn-success" href="{{ url('books:index') }}">Non</a>
    </form>
{% endblock %}

