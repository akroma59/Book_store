{% extends 'base.html.twig' %}

{% set pageTitle ="Détails du livre : "~ book.title %}

{% block title %}{{pageTitle}}{% endblock %}

{% block sidebar %}
    <ul class="nav flex-column">
        <li class="nav-item">
            <a class="nav-link active" href="{{ url("homepage") }}">Accueil</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="{{ url("books:index") }}">Livres</a>
        </li>
        <hr>
        <li class="nav-item">
            <a class="nav-link" href="{{ url("books:create") }}">Ajouter un livre</a>
        </li>

    </ul>
{% endblock %}

{% block body %}

    <h2>{{pageTitle}}</h2>

    <div class="row">
        <div class="col-4">Id du livre :</div>
        <div class="col-8">{{ book.id }}</div>

        <div class="col-4">Titre du livre :</div>
        <div class="col-8">{{ book.title }}</div>
        
        <div class="col-4">Description du livre :</div>
        <div class="col-8">{{ book.description }}</div>
        
        <div class="col-4">Prix du livre :</div>
        <div class="col-8">{{ book.price }} €</div>
    </div>

{% endblock %}

