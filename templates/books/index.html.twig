{% extends 'base.html.twig' %}

{% set pageTitle="Nos livres" %}

{% block title %}{{pageTitle}}{% endblock %}

{% block sidebar %}
<ul class="nav flex-column">
    <li class="nav-item">
        <a class="nav-link active" href="{{ url("homepage") }}">Accueil</a>
    </li>
    <li class="nav-item">
        <a class="nav-link" href="{{ url("books:index") }}">Livres</a>
    </li>
    <hr>
    <li class="nav-item">
        <a class="nav-link" href="{{ url("books:create") }}">Ajouter un livre</a>
    </li>
</ul>
{% endblock %}

{% block body %}
    {# Liste des livres #}
    <h2>{{pageTitle}}</h2>

    {% if books is defined %}
    {#}
        <ul id="books">
        {% for book in books %}
            <li>{{ book.title }}</li>
        {% endfor %}
        </ul>
    {#}
    <div class="row">
    {% for book in books %}
    
        <div class="col-4 mb-3">
            <div class="card mx-auto" style="width:250px;height:200px;">
                <img src="..." class="card-img-top" alt="...">
                <div class="card-body d-flex">
                    <h5 class="card-title">{{ book.title }}</h5>
                    <p class="card-text">{{ book.description }} </p>
                </div>
                <div class="card-footer">
                    <a href="{{ url("books:read",{'id':book.id}) }}" class="btn btn-primary btn-block">Lire la suite</a>
                </div>
            </div>
        </div>

    {% endfor %}
    </div>
    {% endif %}

{% endblock %}

