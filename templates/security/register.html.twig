{% extends 'base.html.twig' %}

{% block title %} Symfony user {% endblock %}

{% form_theme form 'bootstrap_4_layout.html.twig' %}

{% block body %}

    <h1 class="text-center ">Register</h1>

    <div class="w-25 container align-center">
        {{ form_start(form, {'attr': {"novalidate":"novalidate"}}) }}

        <div class="form-group">
            {{ form_label(form.firstname) }}
            {{ form_widget(form.firstname) }}
            {{ form_errors(form.firstname) }}
            {{ form_help(form.firstname) }}
        </div>

        <div class="form-group">
            {{ form_label(form.lastname) }}
            {{ form_widget(form.lastname) }}
            {{ form_errors(form.lastname) }}
            {{ form_help(form.lastname) }}
        </div>

        <div class="form-group">
            {{ form_label(form.birthday) }}
           
            <div class="row">
                <div class="col">
                    {{ form_widget(form.birthday.day) }}
                </div>
                <div class="col">
                    {{ form_widget(form.birthday.month) }}
                </div>
                <div class="col">    
                    {{ form_widget(form.birthday.year) }}
                </div>
            </div>
            {{ form_errors(form.birthday) }}
            {{ form_help(form.birthday) }}
        </div>

        <div class="form-group">
            {{ form_label(form.email) }}
            {{ form_widget(form.email) }}
            {{ form_errors(form.email) }}
            {{ form_help(form.email) }}
        </div>

        <div class="form-group">
            <div class="text-center h3">
                {{ form_label(form.password) }}
            </div>
            <br>
            {{ form_label(form.password.first) }}
            {{ form_widget(form.password.first) }}
            <br>
            {{ form_label(form.password.second) }}
            {{ form_widget(form.password.second) }}
    
            {{ form_errors(form.password) }}
            {{ form_help(form.password) }}
        </div>
        
        <div class="form-group">
            {{ form_label(form.agreeTerms) }}
            {{ form_widget(form.agreeTerms) }}
            {{ form_errors(form.agreeTerms) }}
            {{ form_help(form.agreeTerms) }}
        </div>

        <button class="btn btn-primary">Inscription</button>

        {{ form_rest(form) }}
        {{ form_end(form) }}
    </div>
    
{% endblock %}